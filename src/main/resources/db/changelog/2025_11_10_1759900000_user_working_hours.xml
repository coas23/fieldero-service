<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-user-working-hours" author="codex">
        <createTable tableName="user_working_hour">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_user_working_hour"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE" />
            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE" />
            <column name="created_by" type="BIGINT" />
            <column name="updated_by" type="BIGINT" />
            <column name="day_of_week" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIME WITHOUT TIME ZONE"/>
            <column name="end_time" type="TIME WITHOUT TIME ZONE"/>
            <column name="break_minutes" type="INTEGER" defaultValueNumeric="0"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_working_hour_user" references="own_user(id)"/>
            </column>
        </createTable>
        <createIndex tableName="user_working_hour" indexName="idx_user_working_hour_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="user_working_hour" indexName="idx_user_working_hour_day">
            <column name="day_of_week"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
